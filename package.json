{
  "name": "@ikenxuan/amagi-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "description": "Amagi monorepo - 抖音、B站的 web 端相关数据接口基于 Node.js 的实现",
  "keywords": [
    "douyin",
    "bilibili",
    "kuaishou",
    "xiaohongshu",
    "api",
    "monorepo"
  ],
  "homepage": "https://github.com/ikenxuan/amagi",
  "bugs": {
    "url": "https://github.com/ikenxuan/amagi/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ikenxuan/amagi.git"
  },
  "license": "GPL-3.0-only",
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter=./packages/* run build",
    "build:core": "pnpm --filter=@ikenxuan/amagi run build",
    "clean": "pnpm -r --filter=./packages/* run clean",
    "dev": "pnpm --filter=@ikenxuan/amagi run dev",
    "types-docs:build": "pnpm -r --filter=./packages/* run types-docs:build",
    "types-docs:serve": "pnpm --filter=@ikenxuan/amagi run types-docs:serve",
    "docs:dev": "pnpm --filter=docs run dev",
    "fix": "pnpm -r --filter=./packages/* run fix",
    "lint": "eslint packages/*/src/**/*.ts",
    "prepare": "husky",
    "sort": "pnpm -r --filter=./packages/* run sort",
    "test": "pnpm -r --filter=./packages/* run test",
    "typecheck": "pnpm -r --filter=./packages/* run typecheck"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "9.39.1",
    "@swc/core": "1.13.20",
    "@types/node": "24.10.1",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "cross-env": "10.1.0",
    "eslint": "9.39.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "17.0.0",
    "husky": "^9.1.7",
    "neostandard": "0.12.2",
    "sort-package-json": "3.5.0",
    "tinyglobby": "^0.2.15",
    "tsc-alias": "1.8.16",
    "tsdown": "^0.19.0",
    "tsx": "4.21.0",
    "typedoc": "0.28.15",
    "typescript": "5.8.3"
  }
}
